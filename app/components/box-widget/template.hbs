<div class="box box-{{class}}">
  <div class="box-header with-border">
    <h3 class="box-title">{{title}}</h3>
    <div class="box-tools pull-right">{{named-yield 'tools'}}</div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    {{yield (hash
      tools=(component 'block-for' 'tools')
      footer=(component 'block-for' 'footer')
    )}}
  </div>
  <!-- /.box-body -->
  <div class="box-footer text-center">
    {{named-yield 'footer'}}
  </div>
  <!-- /.box-footer -->
</div>
